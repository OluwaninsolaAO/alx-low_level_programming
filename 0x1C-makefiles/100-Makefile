CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY : all clean oclean fclean re

all: $(OBJ)
	if test -f m.h; then $(CC) $(OBJ) -o $(NAME); fi

clean:
	$(RM) $(wildcard *~) $(wildcard *.swp) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
